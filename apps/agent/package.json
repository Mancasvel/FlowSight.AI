{
  "name": "@flowsight/agent",
  "version": "1.0.0",
  "private": true,
  "description": "FlowSight AI - Privacy-first, local-first developer productivity agent",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development electron-vite dev",
    "build": "electron-vite build",
    "type-check": "tsc --noEmit",
    "package": "electron-builder",
    "start": "electron .",
    "setup:ollama": "ollama serve",
    "setup:models": "ollama pull phi3:3.8b"
  },
  "dependencies": {
    "@flowsight/shared": "workspace:*",
    "active-win": "^8.1.0",
    "axios": "^1.6.5",
    "better-sqlite3": "^9.4.3",
    "dotenv": "^16.3.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "sharp": "^0.33.2",
    "socket.io": "^4.7.4",
    "winston": "^3.11.0",
    "zod": "^3.22.4",
    "ollama": "^0.2.0",
    "onnxruntime": "^1.17.1",
    "mlx-js": "^0.1.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/sharp": "^0.31.1",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "esbuild": "^0.19.11",
    "esbuild-node-externals": "^1.11.0"
  },
  "build": {
    "appId": "com.flowsight.agent",
    "productName": "FlowSight Agent",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}

