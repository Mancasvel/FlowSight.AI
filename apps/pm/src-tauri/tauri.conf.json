{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FlowSight PM",
  "version": "1.0.0",
  "identifier": "ai.flowsight.pm",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://127.0.0.1:1421",
    "beforeDevCommand": "pnpm start-server",
    "beforeBuildCommand": "pnpm vite build"
  },
  "app": {
    "windows": [
      {
        "title": "FlowSight PM Dashboard",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}