{
  "name": "flowsight-ai",
  "version": "1.0.0",
  "private": true,
  "description": "FlowSight AI - Privacy-first developer activity monitor with local AI",
  "scripts": {
    "dev:agent": "pnpm --filter @flowsight/agent dev",
    "dev:pm": "pnpm --filter @flowsight/pm dev",
    "build:agent": "pnpm --filter @flowsight/agent build",
    "build:pm": "pnpm --filter @flowsight/pm build",
    "build": "pnpm build:agent && pnpm build:pm"
  },
  "workspaces": [
    "apps/*"
  ],
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.0.0"
  }
}
